---
// src/pages/galeri-aktivitas/index.astro
import Layout from '../../layouts/Layout.astro'; // Sesuaikan path jika Layout.astro ada di tempat lain
import { Image } from 'astro:assets'; // Import komponen Image untuk optimasi

// Placeholder data untuk contoh aktivitas. Nanti akan diganti dengan data dari content collection.
const activities = [
  {
    slug: 'workshop-menulis-kreatif',
    title: 'Workshop Menulis Kreatif Bersama Penulis Lokal',
    date: '10 Juli 2025',
    description: 'TBM Al-Bidayah sukses menyelenggarakan workshop menulis kreatif yang diikuti puluhan peserta antusias dari berbagai kalangan...',
    image: '/src/assets/activity-workshop.png', // Pastikan gambar ini ada di src/assets/
    alt: 'Peserta workshop menulis kreatif',
  },
  {
    slug: 'peluncuran-buku-digital',
    title: 'Peluncuran Buku Digital Terbaru Koleksi TBM',
    date: '05 Juli 2025',
    description: 'Koleksi buku digital TBM Al-Bidayah bertambah dengan hadirnya puluhan judul baru yang siap diakses oleh seluruh anggota...',
    image: '/src/assets/activity-digital-book.png', // Pastikan gambar ini ada di src/assets/
    alt: 'Peluncuran buku digital',
  },
  {
    slug: 'kunjungan-perpustakaan-keliling',
    title: 'Kunjungan Perpustakaan Keliling ke Desa Terpencil',
    date: '28 Juni 2025',
    description: 'Tim TBM Al-Bidayah melaksanakan program perpustakaan keliling, membawa semangat literasi ke desa-desa yang sulit terjangkau...',
    image: '/src/assets/activity-mobile-library.png', // Pastikan gambar ini ada di src/assets/
    alt: 'Perpustakaan keliling di desa',
  },
  {
    slug: 'lomba-membaca-anak',
    title: 'Lomba Membaca untuk Anak-Anak TBM',
    date: '20 Juni 2025',
    description: 'Kemeriahan lomba membaca yang diikuti oleh anak-anak anggota TBM Al-Bidayah, bertujuan meningkatkan minat baca sejak dini...',
    image: '/src/assets/activity-reading-comp.png', // Pastikan gambar ini ada di src/assets/
    alt: 'Anak-anak mengikuti lomba membaca',
  },
];
---

<Layout title="Galeri Aktivitas TBM Al-Bidayah">
  <main class="py-16 md:py-24 bg-gray-50 text-gray-800">
    <div class="container mx-auto px-4 md:px-6">
      <h1 class="text-4xl md:text-5xl font-bold font-serif text-center mb-6 text-red-700">Galeri Aktivitas</h1>
      <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto mb-12">
        Jelajahi berbagai kegiatan dan momen berharga yang telah kami selenggarakan untuk memajukan literasi dan komunitas.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {activities.map((activity) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-102 transition duration-300 flex flex-col h-full">
            <div class="relative w-full h-56 overflow-hidden">
              <Image 
                src={activity.image} 
                alt={activity.alt} 
                width={600}
                height={350} 
                class="object-cover w-full h-full"
                loading="lazy"
              />
            </div>
            <div class="p-6 flex flex-col flex-grow">
              <h2 class="text-2xl font-bold mb-2 font-serif text-gray-900">{activity.title}</h2>
              <p class="text-gray-600 text-sm mb-3">{activity.date}</p>
              <p class="text-gray-700 text-base mb-4 flex-grow">{activity.description}</p>
              <a href={`/galeri-aktivitas/${activity.slug}`} class="inline-block text-red-700 hover:text-red-500 font-medium mt-auto self-start">Baca Selengkapnya &rarr;</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>