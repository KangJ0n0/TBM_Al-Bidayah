// src/components/Footer.astro
---
<footer class="bg-gray-100 text-gray-800 relative overflow-hidden py-12 md:py-16">
  {/* Background Pattern */}
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, gray 1px, transparent 1px), radial-gradient(circle at 75% 75%, gray 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>
  
