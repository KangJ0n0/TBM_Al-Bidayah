// JavaScript untuk Mobile Menu Toggle (Vanilla JS)
// Ini adalah script client-side, jadi akan dijalankan di browser
// Direktif client:load memastikan script ini dimuat dan dijalankan
// saat komponen di-load
---
<nav class="fixed w-full z-50 nav-blur bg-red-900/80 border-b border-red-800/30">
    <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center logo-container">
             <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                </svg>
                <span class="ml-2 text-xl font-serif font-bold text-white">TBM Al-Bidayah</span>
            </div>
            
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="text-white hover:text-red-200 font-medium transition-colors duration-300 nav-link">Beranda</a>
                <a href="/layanan-program" class="text-white hover:text-red-200 font-medium transition-colors duration-300 nav-link">Layanan & Program</a>
                <a href="/galeri-aktivitas" class="text-white hover:text-red-200 font-medium transition-colors duration-300 nav-link">Galeri Aktivitas</a>
                <a href="/dokumen" class="text-white hover:text-red-200 font-medium transition-colors duration-300 nav-link">Dokumen</a>
                <a href="/tentang-kami" class="text-white hover:text-red-200 font-medium transition-colors duration-300 nav-link">Tentang Kami</a>
               
            </div>
            
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-white focus:outline-none hamburger-btn">
                    <div class="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </button>
            </div>
        </div>
    </div>
    
    <div id="mobile-menu" class="mobile-menu md:hidden bg-red-900/90">
        <div class="container mx-auto px-6 flex flex-col space-y-3 py-4">
            <a href="/" class="block text-white hover:text-red-200 hover:bg-red-800/30 font-medium transition-all duration-300 py-2 px-3 rounded mobile-menu-item">Beranda</a>
            <a href="/layanan-program" class="block text-white hover:text-red-200 hover:bg-red-800/30 font-medium transition-all duration-300 py-2 px-3 rounded mobile-menu-item">Layanan & Program</a>
            <a href="/galeri-aktivitas" class="block text-white hover:text-red-200 hover:bg-red-800/30 font-medium transition-all duration-300 py-2 px-3 rounded mobile-menu-item">Galeri Aktivitas</a>
            <a href="/dokumen" class="block text-white hover:text-red-200 hover:bg-red-800/30 font-medium transition-all duration-300 py-2 px-3 rounded mobile-menu-item">Dokumen</a>
            <a href="/tentang-kami" class="block text-white hover:text-red-200 hover:bg-red-800/30 font-medium transition-all duration-300 py-2 px-3 rounded mobile-menu-item">Tentang Kami</a>
           
        </div>
    </div>
</nav>

<script>
    // Ini adalah Vanilla JavaScript untuk mengelola tampilan menu mobile
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                // Toggle hamburger animation
                mobileMenuButton.classList.toggle('active');
                
                // Toggle mobile menu dengan smooth animation
                mobileMenu.classList.toggle('active');
            });

            // Tutup menu ketika link diklik
            const menuLinks = mobileMenu.querySelectorAll('a');
            menuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuButton.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });
        }
    });
</script>

<style>
    /* Kamu bisa memindahkan custom CSS di bawah ini ke src/styles/global.css jika mau, */
    /* tapi menaruhnya di sini juga tidak masalah untuk komponen spesifik. */
    .nav-blur {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    /* Logo hover animation */
    .logo-container {
        transition: transform 0.3s ease;
    }
    
    .logo-container:hover {
        transform: scale(1.05);
    }
    
    .logo-container:hover svg {
        transform: rotate(5deg);
        transition: transform 0.3s ease;
    }

    /* Desktop nav links hover effect */
    .nav-link {
        position: relative;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
    }
    
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: #fecaca;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }
    
    .nav-link:hover::after {
        width: 80%;
    }

    /* Hamburger Animation */
    .hamburger {
        width: 24px;
        height: 18px;
        position: relative;
        cursor: pointer;
    }
    
    .hamburger span {
        display: block;
        position: absolute;
        height: 2px;
        width: 100%;
        background: white;
        border-radius: 2px;
        opacity: 1;
        left: 0;
        transform: rotate(0deg);
        transition: all 0.3s ease;
    }
    
    .hamburger span:nth-child(1) {
        top: 0px;
    }
    
    .hamburger span:nth-child(2) {
        top: 8px;
    }
    
    .hamburger span:nth-child(3) {
        top: 16px;
    }
    
    .hamburger-btn.active .hamburger span:nth-child(1) {
        top: 8px;
        transform: rotate(135deg);
    }
    
    .hamburger-btn.active .hamburger span:nth-child(2) {
        opacity: 0;
        left: -60px;
    }
    
    .hamburger-btn.active .hamburger span:nth-child(3) {
        top: 8px;
        transform: rotate(-135deg);
    }

    /* Mobile Menu Animation */
    .mobile-menu {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease-out;
    }
    
    .mobile-menu.active {
        max-height: 400px;
    }
    
    .mobile-menu-item {
        transform: translateX(-100%);
        opacity: 0;
        transition: all 0.3s ease;
    }
    
    .mobile-menu.active .mobile-menu-item {
        transform: translateX(0);
        opacity: 1;
    }
    
    .mobile-menu.active .mobile-menu-item:nth-child(1) { transition-delay: 0.1s; }
    .mobile-menu.active .mobile-menu-item:nth-child(2) { transition-delay: 0.15s; }
    .mobile-menu.active .mobile-menu-item:nth-child(3) { transition-delay: 0.2s; }
    .mobile-menu.active .mobile-menu-item:nth-child(4) { transition-delay: 0.25s; }
    .mobile-menu.active .mobile-menu-item:nth-child(5) { transition-delay: 0.3s; }
    .mobile-menu.active .mobile-menu-item:nth-child(6) { transition-delay: 0.35s; }

    /* Pastikan font Playfair Display dan Open Sans sudah diimpor secara global */
    /* Misalnya di src/styles/global.css atau di Layout.astro <head> */
</style>